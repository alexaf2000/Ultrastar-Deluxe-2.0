{
    "name": "ultrastar",
    "productName": "UltraStar",
    "version": "1.0.0",
    "description": "Nuxt + Electron",
    "author": "Alex AF",
    "private": true,
    "main": "main.js",
    "build": {
        "appId": "com.ultrastar.ultrastar",
        "directories": {
            "buildResources": "static"
        },
        "extraFiles": [
            "./songs",
            "./config.ini",
            "./themes"
        ]
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=DEV electron .",
        "build": "nuxt build && electron-builder"
    },
    "dependencies": {
        "ini": "^1.3.5",
        "jquery": "^3.5.1",
        "nuxt": "^2.14.5"
    },
    "devDependencies": {
        "cross-env": "^6.0.3",
        "electron": "^13.6.6",
        "electron-builder": "^21.2.0",
        "electron-devtools-installer": "^2.2.4"
    }
}
